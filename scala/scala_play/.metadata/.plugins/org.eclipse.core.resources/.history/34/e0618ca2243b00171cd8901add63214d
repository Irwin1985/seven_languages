

trait Censor {
  
  val censoredWords = Map(
      "Shoot" -> "Pucky",
      "Darn" -> "Beans"
  )  
  
  def censor(content: String) : String = {
    
    censoredWords.foldLeft(content)(
        (censoredContent, censoredWord) => {
            censoredContent.replaceAll(
                ("(?i)\\b" + mapping._1 + "\\b"),
                mapping._2
            )
        }
    )
  }
}


